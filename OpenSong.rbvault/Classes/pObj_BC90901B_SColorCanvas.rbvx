		Sub Repaint(g As Graphics = Nil)
		  Dim c As Color
		  
		  If g = Nil then g = Graphics
		  
		  If IsColorSet Then
		    g.ForeColor = MyColor
		    g.FillRect 0, 0, Width, Height
		    
