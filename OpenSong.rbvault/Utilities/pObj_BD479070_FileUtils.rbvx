		Function AbsolutePathToFolderItem(path As String) As FolderItem
		  Dim i, l As Integer
		  Dim f As FolderItem
		  path = ReplaceAll(path, "\", "/")
		  l = CountFields(path, "/")
		  f = GetFolderItem(NthField(path, "/", 1))
		  For i = 2 To l
		    If f <> Nil Then f = f.Child(NthField(path, "/", i))
		  Next i
		  Return f
		End Function
  )
