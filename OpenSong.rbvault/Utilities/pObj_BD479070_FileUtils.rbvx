		Function CreateFolder(f As FolderItem) As Boolean
		  If f = Nil Then
		    SetLastError(f)
		    Return False
		  End If
		  
		  If f.Exists Then
		    If f.Directory Then
		      SetLastError(f)
		      Return True
		    Else
		      LastError = App.T.Translate("fileutils/errors/notdirectory", GetDisplayFullPath(f))
		      Return False
		    End If
		  Else
		    f.CreateAsFolder
		    SetLastError(f)
		    Return f.LastErrorCode = 0
		  End If
		End Function
  )
